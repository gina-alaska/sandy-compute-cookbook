<pool type='netfs'>
  <name><%= @name %></name>
  <source>
    <host name='<%= @opts['host'] %>'/>
    <dir path='<%= @opts['host_path'] %>'/>
    <format type='glusterfs'/>
  </source>
  <target>
    <path><%= @opts['local_path'] %></path>
    <permissions>
      <mode>0755</mode>
      <owner>0</owner>
      <group>0</group>
    </permissions>
  </target>
</pool>